@model Education
@{ ViewData["Title"] = "EducationUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<br />
<h2>Profil Düzenleme Sayfası</h2>
<br />
<form method="post" asp-controller="AdminEducation" asp-action="EducationUpdate">
    <input type="hidden" name="EducationId" value="@Model.EducationId" />
    <div class="form-group">
        <label asp-for="SubTitle"> <b>Okul:</b></label>
        <input asp-for="SubTitle" class="form-control" value="@Model.SubTitle" />
      
    </div>
    <div class="form-group">
        <label asp-for="Title"> <b>Bölüm:</b></label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
      
    </div>  <div class="form-group">
        <label asp-for="NoteAverage"> <b>AGNO:</b></label>
        <input asp-for="NoteAverage" class="form-control" value="@Model.NoteAverage" />
      
    </div>  <div class="form-group">
        <label asp-for="Date"> <b>Tarih:</b></label>
        <input asp-for="Date" class="form-control" value="@Model.Date" />
     
    </div>


    <button type="submit" class="btn btn-outline-success"><b>Değişiklikleri Kaydet</b></button>
</form>

